{
  "manifest_version": 3,
  "name": "Codecademy Progress Tracker",
  "version": "1.0.0",
  "description": "Extract your Codecademy progress and format it for AI-powered study sessions",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["*://*.codecademy.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
