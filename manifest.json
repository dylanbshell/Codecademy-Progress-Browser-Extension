{
  "manifest_version": 3,
  "name": "Codecademy Progress Tracker",
  "version": "1.0.0",
  "description": "Extract your Codecademy progress and format it for AI-powered study sessions",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["*://*.codecademy.com/*"],
      "js": ["utils.js", "content.js"],
      "run_at": "document_idle"
    }
  ]
}
